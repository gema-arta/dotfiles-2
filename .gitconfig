[alias]
	st = status -s
	ci = commit
	ca = commit -a
	glog = log --oneline --decorate --graph
	tags = tag -l
	man = ls-files
	bare = config --bool core.bare true
	review = merge --no-ff --no-commit
	ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
[mergetool]
	prompt = false
[merge]
	ff = false
	tool = fugitive
	conflictstyle = diff3
[format]
	pretty = format:"%h %p %d %ai %ce%n  %s%n"
[core]
	editor = giteditor
[url "git@github.com:"]
	insteadOf = gh:
[url "git@github.banksimple.com:"]
	insteadOf = bh:
[url "git@github.banksimple.com:BankSimple/"]
	insteadOf = bs:
[url "will@meta.lfod.us:share/git/"]
	insteadOf = code:
[diff]
	tool = vimdiff
	noprefix = true
[push]
	default = current
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[init]
	templatedir = ~/.gitconf/init
[help]
	autocorrect = 10
[remote "origin"]
	fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
[hub]
	host = github.banksimple.com
